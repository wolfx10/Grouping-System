@model IEnumerable<GroupingSystem.Models.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<li>@Html.ActionLink("Create New Group", "Create", "Groups")</li>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.groupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.groupSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.groupOwner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.member1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.member2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.member3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.member4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.accepted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.groupDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.groupEvent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.groupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.groupSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.groupOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.accepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.groupDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.groupEvent)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Join", "Join", new { id = item.Id })
            </td>
        </tr>
    }

</table>
