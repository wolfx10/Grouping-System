@model GroupingSystem.Models.UserProfile

@{
    ViewBag.Title = "EditPrivacy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditPrivacy</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserProfile</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.firstName)
    @Html.HiddenFor(model => model.lastName)
    @Html.HiddenFor(model => model.email)
    @Html.HiddenFor(model => model.DoB)
    @Html.HiddenFor(model => model.username)

    <div class="form-group">
        @Html.LabelFor(model => model.privateProfile,"Private profile", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.privateProfile, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.privateProfile, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.privateDoB,"Private Date of Birth" ,htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.privateDoB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.privateDoB, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.privateEvents, "Private Events", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.privateEvents, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.privateEvents, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.privateBadges,"Private Badges", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.privateBadges, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.privateBadges, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

